{
    "version": 2,
    "builds": [
        {
            "src": "run.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.11"
            }
        },
        {
            "src": "app/static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/app/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "run.py"
        }
    ],
    "env": {
        "APP_MODULE": "app.main:app",
        "PYTHONPATH": ".",
        "PYTHON_VERSION": "3.11",
        "VERCEL": "1"
    }
} 